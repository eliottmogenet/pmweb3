<div class="body-onboarding">
  <div class="page-header">
  </div>

  <div class="container" data-controller="tasks" id="mainContainer2">
    <div id="onbord-puzzle" class="puzzle-header">
      <%= image_tag("piece-title.png", :width => 40, style: "margin-left: 10px; margin-bottom: 10px") %>
      <%= image_tag("piece-title.png", :width => 40, style: "margin-left: 10px; margin-bottom: 10px") %>
      <p>0/2 piece unlocked (complete the onboarding to win)</p>
    </div>
      <hr id="separation1">
    <div class="project-description">
      <div class="project-detail">
        <h1 class="onboarding-title" id="project-header-title-2">Create your Puzzle</h1>
        <%= simple_form_for @project do |f| %>
          <%= f.input :name, label: false, placeholder: 'Whatâ€™s your Puzzle name ?*', input_html: { autocomplete: 'off' }, required: true, error: "Project name is missing", style: "border-radius: 50px" %>
