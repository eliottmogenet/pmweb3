<div class="body-onboarding">
  <div class="page-header">
    <div id="firs-separation" class="col-7">
      <% if user_signed_in? %>
        <div id="token_box">
          <p>
            <li class="nav-item dropdown">
              <a class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= image_tag("logo2.png", :width => 50, style: "margin-bottom: 5px;") %>
              </a>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
            <% if current_user.photo.attached? %>
            <div>
              <%= cl_image_tag current_user.photo.key, width: 30, height: "auto", style: "border-radius: 100%;" %>
            </div>
            <% else %>
              <i id="user_blank-small-40-1" class="far fa-user" style="margin-left: 10px"></i>
            <% end %>
              <span id="tokenUserTotal" data-id="<%= current_user.id %>">
                <%= current_user.tasks.where(status: "claimed").pluck(:token_number).map(&:to_i).sum %>
              </span>
          </p>
          |
      </div>
      <% end %>
    </div>
      <div id="request" class="col-5">
      </div>
  </div>

  <div class="container" data-controller="tasks" id="mainContainer2">
    <div class="project-description">
      <div class="project-detail">
        <h1 class="onboarding-title" id="project-header-title-2">Customize your Puzzle</h1>
        <%= simple_form_for @project do |f| %>
        <%= f.input :txt_color, id: "project-color", :label => 'Whatâ€™s your Puzzle color?*', :collection =>{'<div class="colorbox" style="background-color: #B45CD2;"></div>'.html_safe => '#B45CD2', '<div class="colorbox" style="background-color: #456BDE;"></div>'.html_safe => '#456BDE', '<div class="colorbox" style="background-color: #186152;"></div>'.html_safe => '#186152', '<div class="colorbox" style="background-color: #D25C5C"></div>'.html_safe => '#D25C5C', '<div class="colorbox" style="background-color: #FDC045"></div>'.html_safe => '#FDC045'}, as: :radio_buttons %>
        <%= f.input :background, as: :file, :label  =>  'Whatâ€™s your workspace background?*' %>
      </div>
    </div>
      <%= f.submit 'Finish ðŸ‘‰', class: "button-type", id: "button-project", style: "background-color: #{@project.txt_color};"%>
    <% end %>
  </div>
</div>

